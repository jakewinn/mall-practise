page {
  width: 100%;
  height: 100%;
}
.content {
  width: 100%;
  height: 100%;
}
.list-box {
  width: 100%;
  padding: 10px;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  box-sizing: border-box;
}
.list-box .list-item {
  box-sizing: border-box;
  width: calc(50% - 5px);
  overflow: hidden;
  border-radius: 10px;
  background: #fff;
  box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
  margin-bottom: 22px;
  position: relative;
}
.list-box .list-item .tag {
  box-sizing: border-box;
  background-color: #46CBB3;
  color: #fff;
  font-size: 12px;
  border-radius: 2px;
  padding: 2px 4px;
  position: absolute;
  font-weight: 300;
  top: 5px;
  right: 5px;
}
.list-box .list-item .list-item-content {
  padding: 6px;
  height: 88px;
  position: relative;
}
.list-box .list-item .list-item-content .shop-name {
  font-size: 14px;
  line-height: 25px;
  color: #333;
  font-weight: 300;
}
.list-box .list-item .list-item-content .list-item-price {
  position: absolute;
  bottom: 10px;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-right: 22px;
  box-sizing: border-box;
}
.list-box .list-item .list-item-content .list-item-price .price {
  color: red;
  font-size: 18px;
}
.list-box .list-item .list-item-content .list-item-price .sales {
  font-size: 13px;
  color: #aaa;
}
.list-box .list-item image {
  width: 100%;
  height: 185px;
}
.hot {
  width: 100%;
  margin-top: 0px;
  display: flex;
  align-items: center;
  padding-top: 15px;
  padding: 10px 10px;
}
.hot .title {
  font-weight: bold;
  color: #47C8AC;
  font-size: 17px;
  display: block;
  margin-right: 25px;
}
.hot .sort {
  box-sizing: border-box;
  font-size: 15px;
  border-radius: 10px;
  padding: 6px 11px;
  display: flex;
  margin-right: 12px;
}
.hot .sort text {
  display: block;
  margin-right: 4px;
}
.hot .sort-change {
  background-color: rgba(71, 200, 172, 0.3);
  color: #47c8ac;
}
.hot .sortnochange {
  background-color: #F5F6F8;
  color: #AAAAAA;
}

