page,
.main {
  width: 100%;
  height: 100%;
  background: #F5F5F5;
}
.tuikuan {
  position: absolute;
  font-size: 13px;
  color: #aaa;
  left: 10px;
}
.item {
  padding: 10px 12px;
  box-sizing: border-box;
  background-color: #fff;
  margin-bottom: 15px;
}
.item .item-content {
  width: 100%;
  display: flex;
  position: relative;
  padding-bottom: 15px;
  box-sizing: border-box;
  border-bottom: 1px solid #eaeaea;
}
.item .item-content image {
  width: 90px;
  height: 90px;
  display: block;
  margin-right: 10px;
}
.item .item-content .info {
  width: calc(100% - 150px);
}
.item .item-content .info .name {
  font-size: 14px;
  line-height: 24px;
  color: #333;
  display: block;
  margin-bottom: 3px;
}
.item .item-content .info .spe {
  font-size: 13px;
  color: #aaa;
}
.item .item-content .count {
  width: 60px;
  text-align: right;
}
.item .item-content .count .price {
  color: #333;
  font-size: 13px;
  display: inline-block;
}
.item .item-content .count .price .do {
  font-size: 12px;
  display: inline-block;
}
.item .item-content .count .count-info {
  display: block;
  font-size: 13px;
  color: #aaa;
  margin-top: 2px;
}
.item .autual {
  width: 100%;
  height: 35px;
  border-bottom: 1px solid #eeeeee;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  position: relative;
  font-size: 14px;
  color: #333;
}
.item .autual .price {
  color: red;
  font-size: 15px;
  display: inline-block;
}
.item .autual .price .do {
  font-size: 13px;
  display: inline-block;
}
.item .autual .time {
  display: block;
  position: absolute;
  left: 0;
  line-height: 35px;
  font-size: 13px;
  color: #aaa;
}
.item .button {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  position: relative;
  padding: 8px 0;
  padding-top: 12px;
}
.item .button view {
  height: 32px;
  padding: 0 7px;
  border-radius: 3px;
  border: 1px solid #aaa;
  font-size: 14px;
  text-align: center;
  line-height: 32px;
  margin-left: 10px;
}
.item .button .button-pay,
.item .button .button-evaluate,
.item .button .button-confirm {
  color: #fff;
  background-color: #00B26A;
  border-color: #00B26A;
}

