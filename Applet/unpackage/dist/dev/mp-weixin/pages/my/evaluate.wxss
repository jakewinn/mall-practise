page,
.content {
  width: 100%;
  height: 100%;
  background-color: #F5F5F5;
}
.item {
  padding: 15px 10px;
  background-color: #fff;
  margin-bottom: 15px;
  width: 100%;
  box-sizing: border-box;
  position: relative;
}
.item .del {
  position: absolute;
  top: 15px;
  right: 15px;
  font-size: 13px;
  color: #aaa;
}
.item .time {
  display: block;
  width: 100%;
  font-size: 12px;
  color: #aaa;
}
.item .content {
  display: block;
  margin: 5px 0;
  font-size: 15px;
  line-height: 25px;
  background-color: #fff;
}
.item .star {
  display: block;
  width: 100%;
  font-size: 12px;
  color: #aaa;
}
.item .info {
  margin-top: 8px;
  background-color: #F5F5F5;
  height: 45px;
  width: 100%;
  display: flex;
  align-items: center;
  overflow: hidden;
  border-radius: 5px;
}
.item .info image {
  width: 45px;
  height: 45px;
  display: block;
  margin-right: 10px;
}
.item .info .text {
  font-size: 14px;
  color: #333;
  display: block;
  margin-left: 10px;
}

